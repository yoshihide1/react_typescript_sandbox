{
  // ====================================
  // VSCode 設定
  // ====================================
  // 特定のファイルをVSCodeのエクスプローラに表示しない
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  // 改行コード
  "files.eol": "\n",

  // ====================================
  // Javaプロジェクト設定
  // ====================================
  "java.compile.nullAnalysis.mode": "automatic", // // NullPointerExceptionの警告
  "java.configuration.updateBuildConfiguration": "automatic", // build.gradleに修正が入った際に自動で再ビルドをサジェストする
  // ====================================
  // フォーマット(全般)
  // ====================================
  "editor.formatOnSave": true, // 保存時フォーマット
  "editor.tabSize": 2, // タブサイズ2
  "editor.insertSpaces": true, // タブの代わりにスペースを使用
  "editor.detectIndentation": false, // インデントを自動検出しない
  "files.trimTrailingWhitespace": true, // 保存時に末尾の空白を削除
  "files.insertFinalNewline": true, // 保存時にファイルの末尾に改行を追加

  // ====================================
  // Prettierの設定
  // ====================================
  "prettier.singleQuote": true, // シングルクオートを使用
  "prettier.printWidth": 150, // 一行は150文字までとする
  "prettier.trailingComma": "all",

  // ====================================
  // ESLintの設定
  // ====================================
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "jsx"],
  "eslint.workingDirectories": ["./frontend"],

  // ====================================
  // フォーマット(Java)
  // ====================================
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "java.format.enabled": true,
  // ====================================
  // フォーマット(JavaScript, JSON, Markdown, HTML, CSS, XML)
  // ====================================
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": false // Markdown のファイルは行末の空白をトリミングしない
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  // ====================================
  // Spell Checker
  // ====================================
  "cSpell.words": [],
  // ====================================
  // 拡張機能推奨
  // ====================================
  "extensions.ignoreRecommendations": false,
  "java.dependency.packagePresentation": "hierarchical"
}
